{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
        "no-console": ["error", { "allow": ["warn", "error", "log"] }],
        "linebreak-style": [
            0,
            "windows"
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allowAfterThis": true
            }
        ],
        "semi": [
            "error",
            "never",
            {
                "beforeStatementContinuationChars": "never"
            }
        ],
        "class-methods-use-this": 0,
        "camelcase": [
            "error",
            {
                "properties": "never",
                "ignoreDestructuring": true
            }
        ],
        "func-names": ["error", "as-needed"],
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ]
    }
}
